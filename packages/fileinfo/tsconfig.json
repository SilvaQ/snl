{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "../../node_modules/types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declarationDir": "types",
    "declaration": true,
  },
  "exclude": [
    "test",
    "node_modules",
    "../../node_modules"
  ]
}